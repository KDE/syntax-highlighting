## Pipe
diamonds %>%
  filter(price > 1000) %>%
  group_by(cut) %>%
  tally() %>% 
  rename(tally = n) %>% 
  arrange(-tally) %>% 
  mutate(pct = tally / sum(tally)) -> df

## ggplot2 
