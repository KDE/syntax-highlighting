<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language
[
	<!ENTITY time              "\d\d+(?:\:[0-5]\d){2}[\,\.]\d{3}">
	<!ENTITY coordinates       "(?:\s+[XY][12]\:\d+){0,4}\s*$">
	<!ENTITY formatTags        "(?:&lt;/?[bius]&gt;|\{/?[bius]\})">
	<!ENTITY htmlName          "[A-Za-z_\:][\w\.\:\-]*">
	<!ENTITY htmlAttributeName "[A-Za-z_:\*#\(\[][\)\]\w\.\:_\-]+">
]>

