<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language
[
        <!ENTITY funcname "[A-Za-z_:][A-Za-z0-9_:#&#37;${}@-]*">
        <!ENTITY parens   "\(\s*\)">
        <!ENTITY eos      "(?=$|\s)">                 <!-- eol or space following -->
]>
